
@{
    ViewBag.Title = "ClientHome";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";


}


@using TheBestStoreEver.Controllers



<h2>My Sales</h2>


<table id="table" class="table">
    <tr>
        <th>
            Item Name
        </th>
        <th>
           Brand Name
        </th>
        <th>
          Type
        </th>
      

        <th></th>
    </tr>

    @foreach (var v in ViewBag.data as ICollection<Items>)
    {
        <tr>
            <td>
                @v.itemName
            </td>
            <td>
                @v.BrandName
            </td>
            <td>
                @v.itemtype
            </td>
           
          
        </tr>
    }

</table>


<h1>@ViewBag.Type jewlery for you!</h1>
@if (@ViewBag.Type == "Necklace")
{
    <img src="~/Content/images/3.jpg" alt="3" class="w3-hover-opacity">
}

else if (@ViewBag.Type == "choker")
{
    <img src="~/Content/images/13.jpg" alt="13" class="w3-hover-opacity">
}

else if (@ViewBag.Type == "Rings")
{
    <img src="~/Content/images/14.jpg" alt="14"  class="w3-hover-opacity">
}

else if (@ViewBag.Type == "bracelet")
{
    <img src="~/Content/images/15.jpg" alt="15"  class="w3-hover-opacity">
}

else if (@ViewBag.Type == "earrings")
{
    <img src="~/Content/images/16.jpg" alt="16"  class="w3-hover-opacity">
}

else if (@ViewBag.Type == "glasses strings")
{
    <img src="~/Content/images/17.jpg" alt="17" class="w3-hover-opacity">
}














<style>


    table {
        border-collapse: collapse;
        width: 100%;
        background-color: #f8f8f8;
        border: 1.5px solid black;
    }

    
</style>









